{"pages" : [ 
{ "chapter" : 53 , "verse" : 1 , "ar" : "وَٱلنَّجۡمِ إِذَا هَوَىٰ" , "tr" : "በኮከብ እምላለሁ በወደቀ (በገባ) ጊዜ፡፡" },
{ "chapter" : 53 , "verse" : 2 , "ar" : "مَا ضَلَّ صَاحِبُكُمۡ وَمَا غَوَىٰ" , "tr" : "ነቢያችሁ (ሙሐመድ) አልተሳሳተም፤ አልጠመመምም፡፡" },
{ "chapter" : 53 , "verse" : 3 , "ar" : "وَمَا یَنطِقُ عَنِ ٱلۡهَوَىٰۤ" , "tr" : "ከልብ ወለድም አይናገርም፡፡" },
{ "chapter" : 53 , "verse" : 4 , "ar" : "إِنۡ هُوَ إِلَّا وَحۡیࣱ یُوحَىٰ" , "tr" : "እርሱ (ንግግሩ) የሚወርረድ ራእይ እንጅ ሌላ አይደለም፡፡" },
{ "chapter" : 53 , "verse" : 5 , "ar" : "عَلَّمَهُۥ شَدِیدُ ٱلۡقُوَىٰ" , "tr" : "ኀይሎቹ ብርቱው (መልአክ) አስተማረው፡፡" },
{ "chapter" : 53 , "verse" : 6 , "ar" : "ذُو مِرَّةࣲ فَٱسۡتَوَىٰ" , "tr" : "የዕውቀት ባለቤት የኾነው (አስተማረው፤ በተፈጥሮ ቅርጹ ኾኖ በአየር ላይ) ተደላደለም፡፡" },
{ "chapter" : 53 , "verse" : 7 , "ar" : "وَهُوَ بِٱلۡأُفُقِ ٱلۡأَعۡلَىٰ" , "tr" : "እርሱ በላይኛው አድማስ ኾኖ፡፡" },
{ "chapter" : 53 , "verse" : 8 , "ar" : "ثُمَّ دَنَا فَتَدَلَّىٰ" , "tr" : "ከዚያም ቀረበ፤ ወረደም፡፡" },
{ "chapter" : 53 , "verse" : 9 , "ar" : "فَكَانَ قَابَ قَوۡسَیۡنِ أَوۡ أَدۡنَىٰ" , "tr" : "(ከእርሱ) የሁለት ደጋኖች ጫፍ ያህል ወይም (ከዚህ) ይበልጥ የቀረበ ኾነም፡፡" },
{ "chapter" : 53 , "verse" : 10 , "ar" : "فَأَوۡحَىٰۤ إِلَىٰ عَبۡدِهِۦ مَاۤ أَوۡحَىٰ" , "tr" : "ወደ ባሪያውም (አላህ) ያወረደውን አወረደ፡፡" },
{ "chapter" : 53 , "verse" : 11 , "ar" : "مَا كَذَبَ ٱلۡفُؤَادُ مَا رَأَىٰۤ" , "tr" : "(ነቢዩም በዓይኑ) ያየውን ልቡ አልዋሸም፡፡" },
{ "chapter" : 53 , "verse" : 12 , "ar" : "أَفَتُمَـٰرُونَهُۥ عَلَىٰ مَا یَرَىٰ" , "tr" : "ታዲያ በሚያየው ላይ ትከራከሩታላችሁን" },
{ "chapter" : 53 , "verse" : 13 , "ar" : "وَلَقَدۡ رَءَاهُ نَزۡلَةً أُخۡرَىٰ" , "tr" : "በሌላይቱም መውረድ ጊዜ በእርግጥ አይቶታል፡፡" },
{ "chapter" : 53 , "verse" : 14 , "ar" : "عِندَ سِدۡرَةِ ٱلۡمُنتَهَىٰ" , "tr" : "በመጨረሻይቱ ቁርቁራ አጠገብ፤" },
{ "chapter" : 53 , "verse" : 15 , "ar" : "عِندَهَا جَنَّةُ ٱلۡمَأۡوَىٰۤ" , "tr" : "እርሷ ዘንድ መኖሪያይቱ ገነት ያለች ስትኾን፡፡" },
{ "chapter" : 53 , "verse" : 16 , "ar" : "إِذۡ یَغۡشَى ٱلسِّدۡرَةَ مَا یَغۡشَىٰ" , "tr" : "ቁርቁራይቱን የሚሸፍን ነገር በሚሸፍናት ጊዜ (አየው)፡፡" },
{ "chapter" : 53 , "verse" : 17 , "ar" : "مَا زَاغَ ٱلۡبَصَرُ وَمَا طَغَىٰ" , "tr" : "ዓይኑ (ካየው) አልተዘነበለም፡፡ ወሰንም አላለፈም፡፡" },
{ "chapter" : 53 , "verse" : 18 , "ar" : "لَقَدۡ رَأَىٰ مِنۡ ءَایَـٰتِ رَبِّهِ ٱلۡكُبۡرَىٰۤ" , "tr" : "ከጌታው ታምራቶች ታላላቆቹን በእርግጥ አየ፡፡" },
{ "chapter" : 53 , "verse" : 19 , "ar" : "أَفَرَءَیۡتُمُ ٱللَّـٰتَ وَٱلۡعُزَّىٰ" , "tr" : "አል-ላትንና አል-ዑዛን አያችሁን" },
{ "chapter" : 53 , "verse" : 20 , "ar" : "وَمَنَوٰةَ ٱلثَّالِثَةَ ٱلۡأُخۡرَىٰۤ" , "tr" : "ሦስተኛይቱንም አነስተኛዋን መናትን (አያችሁን? የምትግገዟቸው ኃይል አላቸውን)" },
{ "chapter" : 53 , "verse" : 21 , "ar" : "أَلَكُمُ ٱلذَّكَرُ وَلَهُ ٱلۡأُنثَىٰ" , "tr" : "ለእናንተ ወንድ ለእርሱም ሴት (ልጅ) ይኖራልን" },
{ "chapter" : 53 , "verse" : 22 , "ar" : "تِلۡكَ إِذࣰا قِسۡمَةࣱ ضِیزَىٰۤ" , "tr" : "ይህቺ ያን ጊዜ አድላዊ ክፍያ ናት፡፡" },
{ "chapter" : 53 , "verse" : 23 , "ar" : "إِنۡ هِیَ إِلَّاۤ أَسۡمَاۤءࣱ سَمَّیۡتُمُوهَاۤ أَنتُمۡ وَءَابَاۤؤُكُم مَّاۤ أَنزَلَ ٱللَّهُ بِهَا مِن سُلۡطَـٰنٍۚ إِن یَتَّبِعُونَ إِلَّا ٱلظَّنَّ وَمَا تَهۡوَى ٱلۡأَنفُسُۖ وَلَقَدۡ جَاۤءَهُم مِّن رَّبِّهِمُ ٱلۡهُدَىٰۤ" , "tr" : "እነርሱ እናንተና አባቶቻችሁ (አማልክት ብላችሁ) የጠራችኋቸው ስሞች ብቻ እንጅ ምንም አይደሉም፡፡ አላህ በእርሷ (መግገዛት) ምንም ማስረጃ አላወረደም፡፡ ከጌታቸውም መምሪያ የመጣላቸው ሲኾኑ ጥርጣሬንና ነፍሶች የሚዘነበሉበትን እንጅ ሌላ አይከተሉም፡፡" },
{ "chapter" : 53 , "verse" : 24 , "ar" : "أَمۡ لِلۡإِنسَـٰنِ مَا تَمَنَّىٰ" , "tr" : "ለሰው የተመኘው ሁሉ አለውን" },
{ "chapter" : 53 , "verse" : 25 , "ar" : "فَلِلَّهِ ٱلۡءَاخِرَةُ وَٱلۡأُولَىٰ" , "tr" : "መጨረሻይቱም መጀመሪያይቱም (ዓለም) የአላህ ብቻ ናቸው፡፡" },
{ "chapter" : 53 , "verse" : 26 , "ar" : "۞ وَكَم مِّن مَّلَكࣲ فِی ٱلسَّمَـٰوَ ٰتِ لَا تُغۡنِی شَفَـٰعَتُهُمۡ شَیۡءًا إِلَّا مِنۢ بَعۡدِ أَن یَأۡذَنَ ٱللَّهُ لِمَن یَشَاۤءُ وَیَرۡضَىٰۤ" , "tr" : "በሰማያት ውስጥ ካለ መልአክም ብዙዎች (ሊማለዱለት) ለሚሻውና ለሚወደው ሰው ከፈቀደ በኋላ ቢኾን እንጅ ምልጃቸው ምንም አትጠቅምም፡፡" }
] }