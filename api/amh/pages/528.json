{"pages" : [ 
{ "chapter" : 53 , "verse" : 45 , "ar" : "وَأَنَّهُۥ خَلَقَ ٱلزَّوۡجَیۡنِ ٱلذَّكَرَ وَٱلۡأُنثَىٰ" , "tr" : "እርሱም ሁለቱን ዓይነቶች ወንድንና ሴትን ፈጠረ፡፡" },
{ "chapter" : 53 , "verse" : 46 , "ar" : "مِن نُّطۡفَةٍ إِذَا تُمۡنَىٰ" , "tr" : "ከፍትወት ጠብታ (በማህጸን ውስጥ) በምትፈሰስ ጊዜ፡፡" },
{ "chapter" : 53 , "verse" : 47 , "ar" : "وَأَنَّ عَلَیۡهِ ٱلنَّشۡأَةَ ٱلۡأُخۡرَىٰ" , "tr" : "የኋለኛይቱም ማስነሳት በእርሱ ላይ ነው፡፡" },
{ "chapter" : 53 , "verse" : 48 , "ar" : "وَأَنَّهُۥ هُوَ أَغۡنَىٰ وَأَقۡنَىٰ" , "tr" : "እነሆ እርሱም አከበረ፣ ጥሪተኛም አደረገ፡፡" },
{ "chapter" : 53 , "verse" : 49 , "ar" : "وَأَنَّهُۥ هُوَ رَبُّ ٱلشِّعۡرَىٰ" , "tr" : "እነሆ እርሱም የሺዕራ ጌታ ነው፡፡" },
{ "chapter" : 53 , "verse" : 50 , "ar" : "وَأَنَّهُۥۤ أَهۡلَكَ عَادًا ٱلۡأُولَىٰ" , "tr" : "እነሆ እርሱም የፊተኛይቱን ዓድ አጥፍቷል፡፡" },
{ "chapter" : 53 , "verse" : 51 , "ar" : "وَثَمُودَا۟ فَمَاۤ أَبۡقَىٰ" , "tr" : "ሰሙድንም (አጥፍቷል)፤ አላስቀረምም፡፡" },
{ "chapter" : 53 , "verse" : 52 , "ar" : "وَقَوۡمَ نُوحࣲ مِّن قَبۡلُۖ إِنَّهُمۡ كَانُوا۟ هُمۡ أَظۡلَمَ وَأَطۡغَىٰ" , "tr" : "በፊትም የኑሕን ሕዝቦች (አጥፍቷል)፡፡ እነርሱ በጣም በደለኞችና እጅግ የጠመሙ እነርሱ ነበሩና፡፡" },
{ "chapter" : 53 , "verse" : 53 , "ar" : "وَٱلۡمُؤۡتَفِكَةَ أَهۡوَىٰ" , "tr" : "የተገለበጠችውንም ከተማ ደፋ፡፡" },
{ "chapter" : 53 , "verse" : 54 , "ar" : "فَغَشَّىٰهَا مَا غَشَّىٰ" , "tr" : "ያለበሳትንም አለበሳት፡፡" },
{ "chapter" : 53 , "verse" : 55 , "ar" : "فَبِأَیِّ ءَالَاۤءِ رَبِّكَ تَتَمَارَىٰ" , "tr" : "ከጌታህም ጸጋዎች በየትኛው ትጠራጠራለህ" },
{ "chapter" : 53 , "verse" : 56 , "ar" : "هَـٰذَا نَذِیرࣱ مِّنَ ٱلنُّذُرِ ٱلۡأُولَىٰۤ" , "tr" : "ይህ ከፊተኞቹ አስፈራሪዎች (ጎሳ) የኾነ አስፈራሪ ነው፡፡" },
{ "chapter" : 53 , "verse" : 57 , "ar" : "أَزِفَتِ ٱلۡءَازِفَةُ" , "tr" : "ቀራቢይቱ (ኅልፈተ ዓለም) ቀረበች፡፡" },
{ "chapter" : 53 , "verse" : 58 , "ar" : "لَیۡسَ لَهَا مِن دُونِ ٱللَّهِ كَاشِفَةٌ" , "tr" : "ለእርሷ ከአላህ ሌላ ገላጭ የላትም፡፡" },
{ "chapter" : 53 , "verse" : 59 , "ar" : "أَفَمِنۡ هَـٰذَا ٱلۡحَدِیثِ تَعۡجَبُونَ" , "tr" : "ከዚህ ንግግር ትደነቃላችሁን" },
{ "chapter" : 53 , "verse" : 60 , "ar" : "وَتَضۡحَكُونَ وَلَا تَبۡكُونَ" , "tr" : "ትስቃላችሁምን? አታለቅሱምን" },
{ "chapter" : 53 , "verse" : 61 , "ar" : "وَأَنتُمۡ سَـٰمِدُونَ" , "tr" : "እናንተም ዘንጊዎች ናችሁ፡፡" },
{ "chapter" : 53 , "verse" : 62 , "ar" : "فَ̅ٱ̅سۡ̅جُ̅دُ̅و̅ا۟̅ لِلَّهِ وَٱعۡبُدُوا۟ ۩" , "tr" : "ለአላህም ስገዱ ተገዙትም፡፡" },
{ "chapter" : 54 , "verse" : 1 , "ar" : "ٱقۡتَرَبَتِ ٱلسَّاعَةُ وَٱنشَقَّ ٱلۡقَمَرُ" , "tr" : "ሰዓቲቱ (የትንሣኤ ቀን) ተቃረበች፤ ጨረቃም ተገመሰ፡፡" },
{ "chapter" : 54 , "verse" : 2 , "ar" : "وَإِن یَرَوۡا۟ ءَایَةࣰ یُعۡرِضُوا۟ وَیَقُولُوا۟ سِحۡرࣱ مُّسۡتَمِرࣱّ" , "tr" : "ተዓምርንም ቢያዩ (ከእምነት) ይዞራሉ፡፡ (ይህ) «ዘውታሪ ድግምት ነውም» ይላሉ፡፡" },
{ "chapter" : 54 , "verse" : 3 , "ar" : "وَكَذَّبُوا۟ وَٱتَّبَعُوۤا۟ أَهۡوَاۤءَهُمۡۚ وَكُلُّ أَمۡرࣲ مُّسۡتَقِرࣱّ" , "tr" : "አስተባበሉም፡፡ ዝንባሌዎቻቸውንም ተከተሉ፡፡ ነገርም ሁሉ (ወሰን አለው)፤ ረጊ ነው፡፡" },
{ "chapter" : 54 , "verse" : 4 , "ar" : "وَلَقَدۡ جَاۤءَهُم مِّنَ ٱلۡأَنۢبَاۤءِ مَا فِیهِ مُزۡدَجَرٌ" , "tr" : "ከዜናዎችም በእርሱ ውስጥ መገሰጥ ያለበት ነገር በእርግጥ መጣላቸው፡፡" },
{ "chapter" : 54 , "verse" : 5 , "ar" : "حِكۡمَةُۢ بَـٰلِغَةࣱۖ فَمَا تُغۡنِ ٱلنُّذُرُ" , "tr" : "ሙሉ የኾነች ጥበብ (መጣቻቸው) ግን አስፈራሪዎቹ አያብቃቁም፡፡" },
{ "chapter" : 54 , "verse" : 6 , "ar" : "فَتَوَلَّ عَنۡهُمۡۘ یَوۡمَ یَدۡعُ ٱلدَّاعِ إِلَىٰ شَیۡءࣲ نُّكُرٍ" , "tr" : "ከነርሱም ዙር፡፡ ጠሪው (መልአክ) ወደ አስደንጋጭ ነገር የሚጠራበትን ቀን (አስታውስ)፡፡" }
] }