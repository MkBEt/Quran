{"pages" : [ 
{ "chapter" : 56 , "verse" : 51 , "ar" : "ثُمَّ إِنَّكُمۡ أَیُّهَا ٱلضَّاۤلُّونَ ٱلۡمُكَذِّبُونَ" , "tr" : "«ከዚያም እናንተ ጠማሞች አስተባባዮች ሆይ" },
{ "chapter" : 56 , "verse" : 52 , "ar" : "لَءَاكِلُونَ مِن شَجَرࣲ مِّن زَقُّومࣲ" , "tr" : "« ከዘቁም ዛፍ በእርግጥ በይዎች ናችሁ፡፡" },
{ "chapter" : 56 , "verse" : 53 , "ar" : "فَمَالِءُونَ مِنۡهَا ٱلۡبُطُونَ" , "tr" : "«ከእርሷም ሆዶቻችሁን ሞይዎች ናችሁ፡፡" },
{ "chapter" : 56 , "verse" : 54 , "ar" : "فَشَـٰرِبُونَ عَلَیۡهِ مِنَ ٱلۡحَمِیمِ" , "tr" : "«በእርሱ ላይም ከፈላ ውሃ ጠጪዎች ናችሁ፡፡" },
{ "chapter" : 56 , "verse" : 55 , "ar" : "فَشَـٰرِبُونَ شُرۡبَ ٱلۡهِیمِ" , "tr" : "«የተጠሙንም ግመሎች አጠጣጥ ብጤ ጠጪዎች ናችሁ፡፡»" },
{ "chapter" : 56 , "verse" : 56 , "ar" : "هَـٰذَا نُزُلُهُمۡ یَوۡمَ ٱلدِّینِ" , "tr" : "ይህ በፍርዱ ቀን መስተንግዷቸው ነው፡፡" },
{ "chapter" : 56 , "verse" : 57 , "ar" : "نَحۡنُ خَلَقۡنَـٰكُمۡ فَلَوۡلَا تُصَدِّقُونَ" , "tr" : "እኛ ፈጠርናችሁ አታምኑምን" },
{ "chapter" : 56 , "verse" : 58 , "ar" : "أَفَرَءَیۡتُم مَّا تُمۡنُونَ" , "tr" : "(በማኅፀኖች) የምታፈሱትን አያችሁን" },
{ "chapter" : 56 , "verse" : 59 , "ar" : "ءَأَنتُمۡ تَخۡلُقُونَهُۥۤ أَمۡ نَحۡنُ ٱلۡخَـٰلِقُونَ" , "tr" : "እናንተ ትፈጥሩታላችሁን? ወይስ እኛ ፈጣሪዎቹን ነን" },
{ "chapter" : 56 , "verse" : 60 , "ar" : "نَحۡنُ قَدَّرۡنَا بَیۡنَكُمُ ٱلۡمَوۡتَ وَمَا نَحۡنُ بِمَسۡبُوقِینَ" , "tr" : "እኛ ሞትን (ጊዜውን) በመካከላችሁ ወሰንን፡፡ እኛም ተሸናፊዎች አይደለንም፡፡" },
{ "chapter" : 56 , "verse" : 61 , "ar" : "عَلَىٰۤ أَن نُّبَدِّلَ أَمۡثَـٰلَكُمۡ وَنُنشِئَكُمۡ فِی مَا لَا تَعۡلَمُونَ" , "tr" : "ብጤዎቻችሁን በመለወጥና በዚያ በማታውቁትም (ቅርጽ) እናንተን በመፍጠር ላይ (አንሸነፍም)፡፡" },
{ "chapter" : 56 , "verse" : 62 , "ar" : "وَلَقَدۡ عَلِمۡتُمُ ٱلنَّشۡأَةَ ٱلۡأُولَىٰ فَلَوۡلَا تَذَكَّرُونَ" , "tr" : "የፊተኛይቱንም አፈጣጠር በእርግጥ ዐውቃችኋል፡፡ አትገነዘቡምን" },
{ "chapter" : 56 , "verse" : 63 , "ar" : "أَفَرَءَیۡتُم مَّا تَحۡرُثُونَ" , "tr" : "የምትዘሩትንም አያችሁን" },
{ "chapter" : 56 , "verse" : 64 , "ar" : "ءَأَنتُمۡ تَزۡرَعُونَهُۥۤ أَمۡ نَحۡنُ ٱلزَّ ٰرِعُونَ" , "tr" : "እናንተ ታበቅሉታላችሁን? ወይስ እኛ አብቃዮቹ ነን" },
{ "chapter" : 56 , "verse" : 65 , "ar" : "لَوۡ نَشَاۤءُ لَجَعَلۡنَـٰهُ حُطَـٰمࣰا فَظَلۡتُمۡ تَفَكَّهُونَ" , "tr" : "ብነሻ ኖሮ ደረቅ ስብርብር ባደረግነውና የምትደነቁም በኾናችሁ ነበር፡፡" },
{ "chapter" : 56 , "verse" : 66 , "ar" : "إِنَّا لَمُغۡرَمُونَ" , "tr" : "«እኛ በዕዳ ተያዦች ነን፡፡" },
{ "chapter" : 56 , "verse" : 67 , "ar" : "بَلۡ نَحۡنُ مَحۡرُومُونَ" , "tr" : "«በእርግጥም እኛ (ከመጠቀም) የተከለከልን ነን» (ትሉ ነበር)፡፡" },
{ "chapter" : 56 , "verse" : 68 , "ar" : "أَفَرَءَیۡتُمُ ٱلۡمَاۤءَ ٱلَّذِی تَشۡرَبُونَ" , "tr" : "ያንንም የምትጠጡትን ውሃ አየችሁን" },
{ "chapter" : 56 , "verse" : 69 , "ar" : "ءَأَنتُمۡ أَنزَلۡتُمُوهُ مِنَ ٱلۡمُزۡنِ أَمۡ نَحۡنُ ٱلۡمُنزِلُونَ" , "tr" : "እናንተ ከደመናው አወረዳችሁትን? ወይስ እኛ አውራጆቹ ነን" },
{ "chapter" : 56 , "verse" : 70 , "ar" : "لَوۡ نَشَاۤءُ جَعَلۡنَـٰهُ أُجَاجࣰا فَلَوۡلَا تَشۡكُرُونَ" , "tr" : "ብንሻ ኖሮ መርጋጋ ባደረግነው ነበር፡፡ አታመሰግኑምን" },
{ "chapter" : 56 , "verse" : 71 , "ar" : "أَفَرَءَیۡتُمُ ٱلنَّارَ ٱلَّتِی تُورُونَ" , "tr" : "ያቺንም የምትሰብቋትን እሳት አያችሁን" },
{ "chapter" : 56 , "verse" : 72 , "ar" : "ءَأَنتُمۡ أَنشَأۡتُمۡ شَجَرَتَهَاۤ أَمۡ نَحۡنُ ٱلۡمُنشِءُونَ" , "tr" : "እናንተ ዛፏን ፈጠራችሁን? ወይስ እኛ ፈጣሪዎችዋ ነን" },
{ "chapter" : 56 , "verse" : 73 , "ar" : "نَحۡنُ جَعَلۡنَـٰهَا تَذۡكِرَةࣰ وَمَتَـٰعࣰا لِّلۡمُقۡوِینَ" , "tr" : "እኛ (ለገሀናም) ማስታወሻ ለመንገደኞችም መጠቀሚያ አደረግናት፡፡" },
{ "chapter" : 56 , "verse" : 74 , "ar" : "فَسَبِّحۡ بِٱسۡمِ رَبِّكَ ٱلۡعَظِیمِ" , "tr" : "የታላቁን ጌታህንም ስም አወድስ፡፡" },
{ "chapter" : 56 , "verse" : 75 , "ar" : "۞ فَلَاۤ أُقۡسِمُ بِمَوَ ٰقِعِ ٱلنُّجُومِ" , "tr" : "በከዋክብትም መጥለቂያዎች እምላለሁ፡፡" },
{ "chapter" : 56 , "verse" : 76 , "ar" : "وَإِنَّهُۥ لَقَسَمࣱ لَّوۡ تَعۡلَمُونَ عَظِیمٌ" , "tr" : "እርሱም ብታወቁ ታላቅ መሓላ ነው፡፡" }
