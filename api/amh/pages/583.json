{ "chapter" : 78 , "verse" : 31 , "ar" : "إِنَّ لِلۡمُتَّقِینَ مَفَازًا" , "tr" : "ለጥንቁቆቹ መዳኛ ስፍራ አልላቸው፡፡" },
{ "chapter" : 78 , "verse" : 32 , "ar" : "حَدَاۤئِقَ وَأَعۡنَـٰبࣰا" , "tr" : "አትክልቶችና ወይኖችም፡፡" },
{ "chapter" : 78 , "verse" : 33 , "ar" : "وَكَوَاعِبَ أَتۡرَابࣰا" , "tr" : "እኩያዎች የኾኑ ጡተ ጉቻማዎችም፡፡" },
{ "chapter" : 78 , "verse" : 34 , "ar" : "وَكَأۡسࣰا دِهَاقࣰا" , "tr" : "የተሞሉ ብርጭቆዎችም፡፡" },
{ "chapter" : 78 , "verse" : 35 , "ar" : "لَّا یَسۡمَعُونَ فِیهَا لَغۡوࣰا وَلَا كِذَّ ٰبࣰا" , "tr" : "በውስጧ ትርፍ ቃልንም ማስዋሸትንም አይሰሙም፡፡" },
{ "chapter" : 78 , "verse" : 36 , "ar" : "جَزَاۤءࣰ مِّن رَّبِّكَ عَطَاۤءً حِسَابࣰا" , "tr" : "ከጌታህ የኾነን ምንዳ በቂ ስጦታን (ተሰጡ)፡፡" },
{ "chapter" : 78 , "verse" : 37 , "ar" : "رَّبِّ ٱلسَّمَـٰوَ ٰتِ وَٱلۡأَرۡضِ وَمَا بَیۡنَهُمَا ٱلرَّحۡمَـٰنِۖ لَا یَمۡلِكُونَ مِنۡهُ خِطَابࣰا" , "tr" : "የሰማያትና የምድር በመካከላቸውም ያለው ሁሉ ጌታ በጣም አዛኝ ከኾነው (ተመነዱ)፡፡ ከእርሱ ጋር መነጋገርን አይችሉም፡፡" },
{ "chapter" : 78 , "verse" : 38 , "ar" : "یَوۡمَ یَقُومُ ٱلرُّوحُ وَٱلۡمَلَـٰۤئِكَةُ صَفࣰّاۖ لَّا یَتَكَلَّمُونَ إِلَّا مَنۡ أَذِنَ لَهُ ٱلرَّحۡمَـٰنُ وَقَالَ صَوَابࣰا" , "tr" : "መንፈሱ (ጂብሪል) መላእክቶቹም የተሰለፉ ኾነው በሚቆሙ ቀን አል-ረሕማን ለእርሱ የፈቀደለትና ትክክለኛን ቃል ያለ ሰው ቢኾን እንጅ (መነጋገርን አይችሉም)፡፡" },
{ "chapter" : 78 , "verse" : 39 , "ar" : "ذَ ٰلِكَ ٱلۡیَوۡمُ ٱلۡحَقُّۖ فَمَن شَاۤءَ ٱتَّخَذَ إِلَىٰ رَبِّهِۦ مَءَابًا" , "tr" : "ይህ የተረጋገጠው ቀን ነው፡፡ የሻም ሰው ወደ ጌታው መመለስን ይይዛል፡፡" },
{ "chapter" : 78 , "verse" : 40 , "ar" : "إِنَّاۤ أَنذَرۡنَـٰكُمۡ عَذَابࣰا قَرِیبࣰا یَوۡمَ یَنظُرُ ٱلۡمَرۡءُ مَا قَدَّمَتۡ یَدَاهُ وَیَقُولُ ٱلۡكَافِرُ یَـٰلَیۡتَنِی كُنتُ تُرَ ٰبَۢا" , "tr" : "እኛ ሰው ሁሉ እጆቹ ያስቀደሙትን በሚያይበትና ከሓዲውም ዋ ምኞቴ! ምንነው ዐፈር በኾንኩ በሚልበት ቀን ቅርብ የኾነን ቅጣት አስጠነቀቅናችሁ፡፡" },
{ "chapter" : 79 , "verse" : 1 , "ar" : "وَٱلنَّـٰزِعَـٰتِ غَرۡقࣰا" , "tr" : "በኃይል አውጪዎች በኾኑት፤" },
{ "chapter" : 79 , "verse" : 2 , "ar" : "وَٱلنَّـٰشِطَـٰتِ نَشۡطࣰا" , "tr" : "በቀስታ መምዘዝንም መዘዦች በኾኑት፤" },
{ "chapter" : 79 , "verse" : 3 , "ar" : "وَٱلسَّـٰبِحَـٰتِ سَبۡحࣰا" , "tr" : "መዋኘትም ዋኚዎች በኾኑት፤" },
{ "chapter" : 79 , "verse" : 4 , "ar" : "فَٱلسَّـٰبِقَـٰتِ سَبۡقࣰا" , "tr" : "መቅደምንም ቀዳሚዎች በኾኑት፤" },
{ "chapter" : 79 , "verse" : 5 , "ar" : "فَٱلۡمُدَبِّرَ ٰتِ أَمۡرࣰا" , "tr" : "ነገርንም አስተናባሪዎች በኾኑት (መላእክት) እምላለሁ፡፡ (በእርግጥ ትቀሰቀሳላችሁ)፡፡" },
{ "chapter" : 79 , "verse" : 6 , "ar" : "یَوۡمَ تَرۡجُفُ ٱلرَّاجِفَةُ" , "tr" : "ተርገፍጋፊይቱ (ምድር) በምትርገፈገፍበት ቀን፤" },
{ "chapter" : 79 , "verse" : 7 , "ar" : "تَتۡبَعُهَا ٱلرَّادِفَةُ" , "tr" : "ለጣቂይቱ የምትከተላት ስትኾን (ትቀሰቀሳላችሁ)፡፡" },
{ "chapter" : 79 , "verse" : 8 , "ar" : "قُلُوبࣱ یَوۡمَئِذࣲ وَاجِفَةٌ" , "tr" : "በዚያ ቀን ልቦች ተሸባሪዎች ናቸው፡፡" },
{ "chapter" : 79 , "verse" : 9 , "ar" : "أَبۡصَـٰرُهَا خَـٰشِعَةࣱ" , "tr" : "ዓይኖቻቸው ተዋራጆች (አቀርቃሪዎች) ናቸው፡፡" },
{ "chapter" : 79 , "verse" : 10 , "ar" : "یَقُولُونَ أَءِنَّا لَمَرۡدُودُونَ فِی ٱلۡحَافِرَةِ" , "tr" : "«እኛ ወደ መጀመሪያይቱ ኹነታ ተመላሾች ነን?» ይላሉ፡፡" },
{ "chapter" : 79 , "verse" : 11 , "ar" : "أَءِذَا كُنَّا عِظَـٰمࣰا نَّخِرَةࣰ" , "tr" : "«የበሰበሱ አጥንቶች በኾን ጊዜ (እንቀሰቀሳለን?)»" },
{ "chapter" : 79 , "verse" : 12 , "ar" : "قَالُوا۟ تِلۡكَ إِذࣰا كَرَّةٌ خَاسِرَةࣱ" , "tr" : "«ይህቺ ያን ጊዜ ባለ ከሳራ መመለስ ናት» ይላሉ፡፡" },
{ "chapter" : 79 , "verse" : 13 , "ar" : "فَإِنَّمَا هِیَ زَجۡرَةࣱ وَ ٰحِدَةࣱ" , "tr" : "እርሷም አንዲት ጩኸት ብቻ ናት፡፡" },
