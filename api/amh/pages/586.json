{"pages" : [ 
{ "chapter" : 81 , "verse" : 1 , "ar" : "إِذَا ٱلشَّمۡسُ كُوِّرَتۡ" , "tr" : "ፀሐይ በተጠቀለለች ጊዜ፤" },
{ "chapter" : 81 , "verse" : 2 , "ar" : "وَإِذَا ٱلنُّجُومُ ٱنكَدَرَتۡ" , "tr" : "ከዋክብትም በረገፉ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 3 , "ar" : "وَإِذَا ٱلۡجِبَالُ سُیِّرَتۡ" , "tr" : "ተራራዎችም በተነዱ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 4 , "ar" : "وَإِذَا ٱلۡعِشَارُ عُطِّلَتۡ" , "tr" : "የዐሥር ወር እርጉዞች ግመሎችም (ያለጠባቂ) በተተዉ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 5 , "ar" : "وَإِذَا ٱلۡوُحُوشُ حُشِرَتۡ" , "tr" : "እንስሳትም ሁሉ በተሰበሰቡ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 6 , "ar" : "وَإِذَا ٱلۡبِحَارُ سُجِّرَتۡ" , "tr" : "ባሕሮችም በተቃጠሉ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 7 , "ar" : "وَإِذَا ٱلنُّفُوسُ زُوِّجَتۡ" , "tr" : "ነፍሶችም (በየአካሎቻቸው) በተቆራኙ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 8 , "ar" : "وَإِذَا ٱلۡمَوۡءُۥدَةُ سُئِلَتۡ" , "tr" : "በሕይወቷ የተቀበረችውም ሴት ልጅ በተጠየቀች ጊዜ፤" },
{ "chapter" : 81 , "verse" : 9 , "ar" : "بِأَیِّ ذَنۢبࣲ قُتِلَتۡ" , "tr" : "በምን ወንጀል እንደ ተገደለች፤" },
{ "chapter" : 81 , "verse" : 10 , "ar" : "وَإِذَا ٱلصُّحُفُ نُشِرَتۡ" , "tr" : "ጽሑፎችም በተዘረጉ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 11 , "ar" : "وَإِذَا ٱلسَّمَاۤءُ كُشِطَتۡ" , "tr" : "ሰማይም በተገሸለጠች ጊዜ፤" },
{ "chapter" : 81 , "verse" : 12 , "ar" : "وَإِذَا ٱلۡجَحِیمُ سُعِّرَتۡ" , "tr" : "ገሀነምም በተነደደች ጊዜ፤" },
{ "chapter" : 81 , "verse" : 13 , "ar" : "وَإِذَا ٱلۡجَنَّةُ أُزۡلِفَتۡ" , "tr" : "ገነትም በተቀረበች ጊዜ፤" },
{ "chapter" : 81 , "verse" : 14 , "ar" : "عَلِمَتۡ نَفۡسࣱ مَّاۤ أَحۡضَرَتۡ" , "tr" : "ነፍስ ሁሉ (ከሥራ) ያቀረበችውን ታውቃለች፤" },
{ "chapter" : 81 , "verse" : 15 , "ar" : "فَلَاۤ أُقۡسِمُ بِٱلۡخُنَّسِ" , "tr" : "ተመላሾችም በኾኑት (ዐዋድያት) እምላለሁ፡፡" },
{ "chapter" : 81 , "verse" : 16 , "ar" : "ٱلۡجَوَارِ ٱلۡكُنَّسِ" , "tr" : "ኺያጆች ገቢዎች በኾኑት (ከዋክብት)፡፡" },
{ "chapter" : 81 , "verse" : 17 , "ar" : "وَٱلَّیۡلِ إِذَا عَسۡعَسَ" , "tr" : "በሌሊቱም (ጨለማውን) በጠነሰሰ ጊዜ፤" },
{ "chapter" : 81 , "verse" : 18 , "ar" : "وَٱلصُّبۡحِ إِذَا تَنَفَّسَ" , "tr" : "በንጋቱም (በብርሃን) በተነፈሰ ጊዜ፤ (እምላለሁ)፡፡" },
{ "chapter" : 81 , "verse" : 19 , "ar" : "إِنَّهُۥ لَقَوۡلُ رَسُولࣲ كَرِیمࣲ" , "tr" : "እርሱ (ቁርኣን) የክቡር መልክተኛ ቃል ነው፡፡" },
{ "chapter" : 81 , "verse" : 20 , "ar" : "ذِی قُوَّةٍ عِندَ ذِی ٱلۡعَرۡشِ مَكِینࣲ" , "tr" : "የኀይል ባለቤት በዙፋኑ ባለ ቤት ዘንድ ባለሟል የኾነ፡፡" },
{ "chapter" : 81 , "verse" : 21 , "ar" : "مُّطَاعࣲ ثَمَّ أَمِینࣲ" , "tr" : "በዚያ ስፍራ ትእዛዙ ተሰሚ፤ ታማኝ የኾነ (መልክተኛ ቃል) ነው፡፡" },
{ "chapter" : 81 , "verse" : 22 , "ar" : "وَمَا صَاحِبُكُم بِمَجۡنُونࣲ" , "tr" : "ነቢያችሁም በፍጹም ዕብድ አይደለም፡፡" },
{ "chapter" : 81 , "verse" : 23 , "ar" : "وَلَقَدۡ رَءَاهُ بِٱلۡأُفُقِ ٱلۡمُبِینِ" , "tr" : "በግልጹ አድማስም በእርግጥ አይቶታል፡፡" },
{ "chapter" : 81 , "verse" : 24 , "ar" : "وَمَا هُوَ عَلَى ٱلۡغَیۡبِ بِضَنِینࣲ" , "tr" : "እርሱም በሩቁ ወሬ ላይ ሰሳች (ንፉግ) አይደለም፡፡" },
{ "chapter" : 81 , "verse" : 25 , "ar" : "وَمَا هُوَ بِقَوۡلِ شَیۡطَـٰنࣲ رَّجِیمࣲ" , "tr" : "እርሱም (ቁርኣን) የእርጉም ሰይጣን ቃል አይደለም፡፡" },
{ "chapter" : 81 , "verse" : 26 , "ar" : "فَأَیۡنَ تَذۡهَبُونَ" , "tr" : "ታዲያ ወዴት ትኼዳላችሁ" },
{ "chapter" : 81 , "verse" : 27 , "ar" : "إِنۡ هُوَ إِلَّا ذِكۡرࣱ لِّلۡعَـٰلَمِینَ" , "tr" : "እርሱ የዓለማት መገሠጫ እንጅ ሌላ አይደለም፡፡" },
{ "chapter" : 81 , "verse" : 28 , "ar" : "لِمَن شَاۤءَ مِنكُمۡ أَن یَسۡتَقِیمَ" , "tr" : "ከናንተ ቀጥተኛ መኾንን ለሻ ሰው (መገሰጫ ነው)፡፡" },
{ "chapter" : 81 , "verse" : 29 , "ar" : "وَمَا تَشَاۤءُونَ إِلَّاۤ أَن یَشَاۤءَ ٱللَّهُ رَبُّ ٱلۡعَـٰلَمِینَ" , "tr" : "የዓለማት ጌታ አላህ ካልሻም አትሹም፡፡" }
