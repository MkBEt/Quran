{ "chapter" : 82 , "verse" : 17 , "ar" : "وَمَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ" , "tr" : "የፍርድ ቀን ምን እንደኾነ ምን አሳወቀህ" },
{ "chapter" : 82 , "verse" : 18 , "ar" : "ثُمَّ مَاۤ أَدۡرَىٰكَ مَا یَوۡمُ ٱلدِّینِ" , "tr" : "ከዚያም የፍርዱ ቀን ምን እንደኾነ ምን አሳወቀህ" },
{ "chapter" : 82 , "verse" : 19 , "ar" : "یَوۡمَ لَا تَمۡلِكُ نَفۡسࣱ لِّنَفۡسࣲ شَیۡءࣰاۖ وَٱلۡأَمۡرُ یَوۡمَئِذࣲ لِّلَّهِ" , "tr" : "(እርሱ) ማንኛይቱም ነፍስ ለሌላይቱ ነፍስ ምንም ማድረግን የማትችልበት ቀን ነው፡፡ ነገሩም ሁሉ በዚያ ቀን ለአላህ ብቻ ነው፡፡" },
{ "chapter" : 83 , "verse" : 1 , "ar" : "وَیۡلࣱ لِّلۡمُطَفِّفِینَ" , "tr" : "ለሰላቢዎች ወዮላቸው፡፡" },
{ "chapter" : 83 , "verse" : 2 , "ar" : "ٱلَّذِینَ إِذَا ٱكۡتَالُوا۟ عَلَى ٱلنَّاسِ یَسۡتَوۡفُونَ" , "tr" : "ለእነዚያ ከሰዎች ባስሰፈሩ ጊዜ የሚያስሞሉ፡፡" },
{ "chapter" : 83 , "verse" : 3 , "ar" : "وَإِذَا كَالُوهُمۡ أَو وَّزَنُوهُمۡ یُخۡسِرُونَ" , "tr" : "ለእነርሱም (ለሰዎቹ) በሰፈሩ ወይም በመዘኑላቸው ጊዜ የሚያጎድሉ (ለኾኑት)፡፡" },
